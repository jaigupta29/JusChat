<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    tools:context=".Activity.RegistrationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New here? Let's just talk"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/_22sdp"
            android:textStyle="bold"
            android:fontFamily="@font/spartanbold"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/signup"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:src="@drawable/signup"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/primary_color"/>


        <EditText
            android:id="@+id/signupname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editext_shape"
            android:padding="@dimen/_10sdp"
            android:hint="Name"
            android:textColorHint="@color/black"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/spartanregular"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"/>

        <EditText
            android:id="@+id/signupemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editext_shape"
            android:padding="@dimen/_10sdp"
            android:hint="E-mail address"
            android:textColorHint="@color/black"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/spartanregular"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"/>

        <EditText
            android:id="@+id/signupcpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editext_shape"
            android:padding="@dimen/_10sdp"
            android:hint="password"
            android:textColorHint="@color/black"
            android:layout_marginTop="@dimen/_10sdp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:fontFamily="@font/spartanregular"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"/>

        <EditText
            android:id="@+id/signuppassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editext_shape"
            android:padding="@dimen/_10sdp"
            android:hint="confirm password"
            android:textColorHint="@color/black"
            android:layout_marginTop="@dimen/_10sdp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:fontFamily="@font/spartanregular"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"/>
        <TextView
            android:id="@+id/signupbutton"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sign up"
            android:background="@drawable/sign_in_button"
            android:padding="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/spartanbold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_6sdp"
        android:gravity="center">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already logged in? "
            android:fontFamily="@font/spartanregular"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"/>

        <TextView
            android:id="@+id/logIn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/spartanbold"
            android:text="Login!"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp" />
    </LinearLayout>


</RelativeLayout>